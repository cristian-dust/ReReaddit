{
  "manifest_version": 3,
  "name": "ReReaddit",
  "description": "Privacy-first Reddit save manager. Fetch, search, and export without leaving your browser. No data leaves your device.",
  "version": "0.1.0",
  "permissions": [
    "identity",
    "storage",
    "downloads",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://www.reddit.com/*",
    "https://oauth.reddit.com/*"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "action": {
    "default_title": "ReReaddit",
    "default_popup": "src/popup.html"
  }
}
